---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;

const tagColors: Record<string, string> = {
  solarpunk: "#cc3f00", // Example override based on recent context, user can update
};

function getColor(tag: string) {
  return tagColors[tag] || "var(--color-secondary)";
}
---

<ul class="tags" aria-label="Tags">
  {
    tags.map((tag) => (
      <li class="tag" style={{ backgroundColor: getColor(tag) }}>
        <a href={`/blog/tags/${tag}/`}>{tag}</a>
      </li>
    ))
  }
</ul>

<style>
  .tags {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.5em;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    border: 1px solid var(--color-secondary);
    border-radius: 10px;
    padding: 0.2em 0.8em;
    line-height: 1.2;
    font-size: 0.9em;
    display: inline-flex;
    align-items: center;
  }

  .tag a {
    color: var(
      --color-primary
    ); /* Assuming light text on colored backgrounds */
    text-decoration: none;
    /* Ensure readable contrast - might need dynamic text color later if backgrounds vary wildly */
  }

  .tag a:hover {
    text-decoration: underline;
  }
</style>
